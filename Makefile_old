SDLFLAGS := -I /usr/include/SDL2/ -L/usr/lib -lSDL2
CFLAGS := -Wall
vsgbe: vsegbe_cpp.o cpu.o appInit.o ppu.o video.o mmu.o input.o
	g++ $(SDLFLAGS) -o vsgbe.exe vsegbe_cpp.o cpu.o appInit.o ppu.o video.o mmu.o input.o $(CFLAGS)
vsegbe_cpp.o: vsegbe_cpp.cpp cpu.h regFile.h appInit.h ppu.h mmu.h input.h
	g++ -c -g $(SDLFLAGS) vsegbe_cpp.cpp -lm $(CFLAGS)
mmu.o: mmu.cpp mmu.h
	g++ -c -g $(SDLFLAGS) mmu.cpp -lm $(CFLAGS)
cpu.o: cpu.cpp cpu.h regFile.h mmu.h
	g++ -c -g cpu.cpp $(CFLAGS)
appInit.o: appInit.cpp appInit.h mmu.h
	g++ -c -g appInit.cpp -lm $(CFLAGS)
ppu.o: ppu.cpp ppu.h video.h 
	g++ -c -g ppu.cpp -lm $(CFLAGS)
video.o: video.cpp video.h mmu.h
	g++ -c -g $(SDLFLAGS) video.cpp -lm $(CFLAGS)
input.o: input.cpp input.h
	g++ -c -g $(SDLFLAGS) input.cpp -lm $(CFLAGS)
clear:
	rm *.o
